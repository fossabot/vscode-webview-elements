{
  "name": "@bendera/vscode-webview-elements",
  "version": "0.6.2",
  "description": "Webcomponents for creating Visual Studio Code extensions",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "type": "module",
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "npm run build:bundle",
    "build:ts": "tsc",
    "build:watch": "tsc --watch",
    "build:bundle": "npm run build:ts && rollup -c --file dist/bundled.js",
    "build:rollup": "rollup -c",
    "clean": "rimraf dist",
    "eleventy": "eleventy --config=.eleventy.cjs",
    "eleventy:watch": "eleventy --config=.eleventy.cjs --watch",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:lit-analyzer": "lit-analyzer src",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:prettier": "prettier src/**/* --write --ignore-path .gitignore",
    "format:eslint": "eslint src/**/*.ts --fix --ignore-path .gitignore",
    "docs": "npm run docs:clean && npm run build:bundle && npm run analyze && cross-env NODE_ENV=production npm run eleventy",
    "docs:clean": "rimraf docs",
    "docs:start": "npm run docs:clean && npm run build && npm run analyze && cross-env NODE_ENV=development eleventy --config=.eleventy.cjs --serve --port=8081",
    "analyze": "wca analyze \"src/**/*.ts\" --outFiles docs-src/components/{tagname}/api.md && node scripts/patchMdFiles.js",
    "serve": "wds --watch",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\" --names \"tsc,server\"",
    "test": "npm run build:ts && wtr --coverage",
    "test:watch": "wtr --watch",
    "checksize": "npm run build:bundle && cat dist/bundled.js | gzip -9 | wc -c",
    "generate": "node scripts/generateComponent.js",
    "icons": "node scripts/generateIconList.js",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "bendera",
  "license": "MIT",
  "browserslist": [
    "last 1 chrome versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bendera/vscode-webview-elements.git"
  },
  "bugs": {
    "url": "https://github.com/bendera/vscode-webview-elements/issues"
  },
  "homepage": "https://bendera.github.io/vscode-webview-elements",
  "dependencies": {
    "lit": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@gerhobbelt/markdown-it-github-headings": "^2.0.0-2",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-alias": "^3.1.3",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@web/dev-server": "^0.1.18",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/dev-server-legacy": "^0.1.7",
    "@web/dev-server-rollup": "^0.3.8",
    "@web/test-runner": "^0.13.15",
    "@web/test-runner-mocha": "^0.7.3",
    "@web/test-runner-playwright": "^0.8.6",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "color": "^4.0.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "faker": "^5.5.3",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "lit-analyzer": "^1.2.1",
    "markdown-it": "^11.0.1",
    "markdown-it-anchor": "^8.1.0",
    "mocha": "^9.0.3",
    "prettier": "^2.3.2",
    "randomcolor": "^0.6.2",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.2",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "sinon": "^11.1.1",
    "typescript": "^4.3.5",
    "vscode-codicons": "0.0.17",
    "web-component-analyzer": "^1.2.0-next.0"
  }
}
